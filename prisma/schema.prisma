// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Quote {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    title     String
    text      String
}

model Command {
    id          String   @id @default(cuid())
    createdAt   DateTime @default(now())
    commandName String
    userId      String
}

model User {
    id        String    @id @unique
    createdAt DateTime  @default(now())
    birthday  Birthday?
    ban       Ban?
    mute      Mute?
    warnings  Warning[]
}

model Birthday {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    birthDay  DateTime
    userId    String   @unique
    user      User     @relation(fields: [userId], references: [id])
}

model Warning {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    reason    String
    userId    String
    user      User     @relation(fields: [userId], references: [id])
}

model Mute {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    endDate   DateTime
    user      User     @relation(fields: [userId], references: [id])
    userId    String   @unique
}

model Ban {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    endDate   DateTime
    user      User     @relation(fields: [userId], references: [id])
    userId    String   @unique
}
